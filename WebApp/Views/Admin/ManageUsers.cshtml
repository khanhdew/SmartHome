@model IEnumerable<DAO.BaseModels.User>

@{
    ViewData["Title"] = "title";
    Layout = "_AdminLayout";
}
<header class="page-header page-header-dark bg-gradient-primary-to-secondary pb-10">
    <div class="container-xl px-4">
        <div class="page-header-content pt-4">
            <div class="row align-items-center justify-content-between">
                <div class="col-auto mt-4">
                    <h1 class="page-header-title">
                        <div class="page-header-icon"><i data-feather="filter"></i></div>
                        Tables
                    </h1>
                    <div class="page-header-subtitle">An extension of the Simple DataTables library, customized for SB Admin Pro</div>
                </div>
            </div>
        </div>
    </div>
</header>
<div class="container-xl px-4 mt-n10">
    <div class="card mb-4">
        <div class="card-header">Extended DataTables</div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                <tr>
                    <th>@Html.DisplayNameFor(m => m.FirstOrDefault().UserName) </th>
                    <th>@Html.DisplayNameFor(m => m.FirstOrDefault().Email) </th>
                    <th>@Html.DisplayNameFor(m => m.FirstOrDefault().DisplayName) </th>
                    <th>@Html.DisplayNameFor(m => m.FirstOrDefault().PhoneNumber) </th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tfoot>
                <tr>
                    <th>@Html.DisplayNameFor(m => m.FirstOrDefault().UserName) </th>
                    <th>@Html.DisplayNameFor(m => m.FirstOrDefault().Email) </th>
                    <th>@Html.DisplayNameFor(m => m.FirstOrDefault().DisplayName) </th>
                    <th>@Html.DisplayNameFor(m => m.FirstOrDefault().PhoneNumber) </th>
                    <th>Actions</th>
                </tr>
                </tfoot>
                <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>@user.DisplayName</td>
                        <td>@user.PhoneNumber</td>
                        <td>
                            <a href="@Url.Action("Edit", "User", new { id = user.Id })" class="btn btn-primary">Edit</a>
                            <a href="@Url.Action("Delete", "User", new { id = user.Id })" class="btn btn-danger">Delete</a>
                            <a href="@Url.Action("LoginAsUser", "Admin", new { id = user.Id })" class="btn btn-secondary">Login as User</a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>