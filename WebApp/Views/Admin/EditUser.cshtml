@model DAO.BaseModels.User

@{
ViewData["Title"] = "Edit User";
Layout = "_AdminLayout";
}
<div class="col-xl-8">
    <!-- Account details card-->
    <div class="card mb-4">
        <div class="card-header">Account Details</div>
        <div class="card-body">
            <form asp-controller="Admin" asp-action="UpdateUserAndAddRole" asp-route-userId="@Model.Id"  method="post">
                <!-- Form Row-->
                <div class="row gx-3 mb-3">
                    <div class="col-md-6">
                        <label class="small mb-1" for="newDisplayName">Tên</label>
                        <input class="form-control" id="newDisplayName" name="newDisplayName" type="text" placeholder="Enter your name" value="@Model.DisplayName"/>
                    </div>
                    <div class="col-md-6">
                        <label class="small mb-1" for="newPhoneNumber">Số điện thoại</label>
                        <input class="form-control" id="newPhoneNumber" name="newPhoneNumber" type="text" placeholder="Enter your phone number" value="@Model.PhoneNumber"/>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="small mb-1" for="newEmail">Email</label>
                    <input class="form-control" id="newEmail" name="newEmail" type="email" placeholder="Enter your email address" value="@Model.Email" />
                </div>
                <div class="mb-3">
                    <label class="small mb-1">Role</label>
                    <select class="form-select" id="roleName" name="roleName" asp-items="@ViewBag.Roles">
                    </select>
                </div>
                <!-- Submit button-->
                <button class="btn btn-primary" type="submit">Save changes</button>
            </form>
        </div>
    </div>
</div>