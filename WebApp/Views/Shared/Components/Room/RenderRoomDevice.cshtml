@using DAO.Context
@using Microsoft.EntityFrameworkCore
@model IEnumerable<DAO.BaseModels.Device>

@* Generate a table of device *@
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User)
        </th>
        
    </tr>
    <tr></tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Email)
            </td>
            <td>
                <a asp-action="RemoveDeviceFromRoom" asp-controller="Room" asp-route-id="">Remove</a>
            </td>
        </tr>
    }
    @{
        SmartHomeContext context = new SmartHomeContext();
        var unAssignedDevices = context.Devices.Include(d=>d.User).Where(d => d.RoomID == null).ToList();
        foreach (var device in unAssignedDevices)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => device.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => device.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => device.User.Email)
                </td>
                <td>
                    <a asp-action="AddDeviceToRoom" asp-controller="Room" asp-route-id="">Add</a>
                </td>
            </tr>
        }
    }
    </tbody>
</table>