@model DAO.BaseModels.Room

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

<div class="ms-2 mx-2">
    <h1>Edit House</h1>
    <div asp-validation-summary="All" class="text-danger"></div>
    <form asp-controller="House" asp-action="Edit" asp-route-id="@Model.ID" method="post" class="mt-3">
        <input type="hidden" asp-for="ID" />
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Detail"></label>
            <input asp-for="Detail" class="form-control" required />
            <span asp-validation-for="Detail" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Edit</button>
    </form>
</div>
@await Component.InvokeAsync("RoomDevice", Model.ID)